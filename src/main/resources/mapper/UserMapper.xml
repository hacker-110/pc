<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace属性：用于指定当前的映射文件和那个接口进行映射 ，需要指定接口的文件路径 ，需要标注包的完全路径接口  -->
<mapper namespace="com.example.pc.mapper.UserMapper">
<!--    查询用户列表-->
<select id="selectUserInfo" resultType="com.example.pc.dto.WxUserInfoDTO">
    select  id  , nickName , gender, avatarUrl ,create_time  from wx_userInfo
    <where>
    <if test="nickName != null and nickName !=''">
        and nickName LIKE CONCAT("%", #{nickName}, "%")
    </if>
    order by create_time desc
    </where>
</select>
</mapper>